<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/color_base_bg">

    <com.bhm.sdk.bhmlibrary.views.TitleBar
        android:id="@+id/titleBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:titleBarHeight="50dp"
        app:titleTextColor="@color/white"
        app:rightTextColor="@color/white"
        app:leftTextColor="@color/white"
        app:titleText="标题"
        app:rightText="完成"
        app:leftText="返回"
        app:leftViewBackgroundResource="@drawable/arrow_a"
        app:rightViewBackgroundResource="@drawable/arrow_a"
        app:isLeftViewShow="true"
        app:isRightViewShow="true"
        app:dividerHeight="1dp"
        app:leftTextSize="14sp"
        app:titleTextSize="17sp"
        app:rightTextSize="14sp"
        app:dividerColor="@color/black"
        app:backGroundColor="@color/colorPrimary"/>

</LinearLayout>
