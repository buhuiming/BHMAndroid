<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="TitleBar">
        <attr name="titleBarHeight" format="dimension" />
        <attr name="dividerHeight" format="dimension" />
        <attr name="backGroundColor" format="color" />
        <attr name="titleTextColor" format="color" />
        <attr name="titleText" format="string" />
        <attr name="rightTextColor" format="color" />
        <attr name="rightText" format="string" />
        <attr name="leftTextColor" format="color" />
        <attr name="dividerColor" format="color" />
        <attr name="leftText" format="string" />
        <attr name="isLeftViewShow" format="boolean" />
        <attr name="isRightViewShow" format="boolean" />
        <attr name="leftViewBackgroundResource" format="reference" />
        <attr name="rightViewBackgroundResource" format="reference" />
        <attr name="leftTextSize" format="dimension" />
        <attr name="rightTextSize" format="dimension" />
        <attr name="titleTextSize" format="dimension" />
        <attr name="leftViewMarginLeft" format="dimension" />
        <attr name="rightViewMarginRight" format="dimension" />
        <attr name="leftTextViewPaddingLeft" format="dimension" />
        <attr name="rightTextViewPaddingRight" format="dimension" />
        <attr name="titleBarTextStyle" format="integer" >
            <flag name="normal" value="0" />
            <flag name="bold" value="1" />
            <flag name="italic" value="2" />
        </attr>
        <attr name="leftTextStyle" format="integer" >
            <flag name="normal" value="0" />
            <flag name="bold" value="1" />
            <flag name="italic" value="2" />
        </attr>
        <attr name="rightTextStyle" format="integer" >
            <flag name="normal" value="0" />
            <flag name="bold" value="1" />
            <flag name="italic" value="2" />
        </attr>
    </declare-styleable>

    <declare-styleable name="AutoScaleTextView">
        <attr name="minTextSize" format="dimension"/>
    </declare-styleable>

    <declare-styleable name="TextImageView">
        <attr name="hintText" format="string" />
        <attr name="hintTextColor" format="color" />
        <attr name="textColor" format="color" />
        <attr name="maxLines" format="integer" />
        <attr name="drawableRightHintResource" format="reference" />
        <attr name="drawableRightResource" format="reference" />
        <attr name="drawableRightPaddingLeft" format="dimension" />
        <attr name="drawableSize" format="dimension" />
        <attr name="textSize" format="dimension"/>
        <attr name="textStyle" format="integer" >
            <flag name="normal" value="0" />
            <flag name="bold" value="1" />
            <flag name="italic" value="2" />
        </attr>
    </declare-styleable>
</resources>